{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "command": "scripts/build.sh",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Doxygen",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "command": "scripts/doxygen.sh",
            "group": "build"
        },
        {
            "label": "Create Installer",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "command": "scripts/generate_inst.sh",
            "group": "build"
        }
    ]
}