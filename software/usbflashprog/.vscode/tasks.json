{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Update Translation",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "command": "lupdate",
            "args": [
                "-no-obsolete",
                "-recursive",
                ".",
                "-ts",
                "i18n/ufprog_en_US.ts",
                "i18n/ufprog_pt_BR.ts",
            ],
            "group": "build"
        },
        {
            "label": "Build",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "command": "scripts/build.sh",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Test",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "command": "scripts/test.sh",
            "group": "build"
        },
        {
            "label": "Coverage",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "command": "scripts/coverage.sh",
            "group": "build"
        },
        {
            "label": "Doxygen",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "command": "scripts/doxygen.sh",
            "group": "build"
        },
        {
            "label": "Create Installer",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "command": "scripts/generate_inst.sh",
            "group": "build"
        }
    ]
}